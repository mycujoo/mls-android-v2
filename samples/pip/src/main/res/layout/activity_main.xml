<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/player_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/holo_red_light"
        android:maxHeight="320dp"
        app:layout_constraintTop_toTopOf="parent">
        <tv.mycujoo.mcls.widget.MCLSView
            android:id="@+id/mcls_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:enableCast="true"
            app:imaAdUnit="@string/ima_adunit_vod"
            app:imaLiveAdUnit="@string/ima_adunit_live"
            app:publicKey="@string/mcls_public_key" />
    </FrameLayout>



    <Button
        android:id="@+id/play_event_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Event 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_frame" />

    <Button
        android:id="@+id/play_event_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Event 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_event_1" />


</androidx.constraintlayout.widget.ConstraintLayout>